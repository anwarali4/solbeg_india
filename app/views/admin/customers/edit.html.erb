<h2>Sign up</h2>

<%= form_for(@customer, url: admin_customer_path, method: :patch) do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
    <%= f.label :telephone %><br />
    <%= f.text_field :telephone, autofocus: true, autocomplete: "email" %>
  </div>

 <%= f.fields_for :address do |address_fields| %>
    <div class="field">
      <%= address_fields.label :line_1 %><br />
      <%= address_fields.text_field :line_1, autofocus: true, autocomplete: "email" %>
    </div>
  <div class="field">
    <%= address_fields.label :street %><br />
    <%= address_fields.text_field :street, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
    <%= address_fields.label :landmark %><br />
    <%= address_fields.text_field :landmark, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
    <%= address_fields.label :city %><br />
    <%= address_fields.text_field :city, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
    <%= address_fields.label :pin_code %><br />
    <%= address_fields.text_field :pin_code, autofocus: true, autocomplete: "email" %>
  </div>
  <% end %>
  <%= f.label :profile_image %>
  <%= f.file_field :profile_image %>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
